<% content_for :cover do %>

    <div class="movie_detail ">
      <div class="movie_detail_inner clearfix">
        <h1><%= @article[:movie_title] %></h1>
        <picture>
          <img src="https://image.tmdb.org/t/p/w185_and_h278_bestv2<%= @article[:poster_url] %>" alt="">
        </picture>
        <div class="movie_detail_info">
          <% if @movie['overview'].present? %>
              <p><%= @movie['overview'] %></p>
          <% else %>
              <p>概要はありません</p>
          <% end %>
        </div>
      </div>
    </div>

<% end %>

<div class="show_article">
  <h2 class="show_article_title"><%= @article[:article_title] %></h2>
  <div class="show_article_table">

    <p><span class="label label-info"><%= @ranking_stock_counts[@article.id] ||= 0 %> ストック</span>
      <span class="label label-success"><%= Impression.where(impressionable_id: @article.id).size ||= 0 %> PV</span></p>

    <table>
      <tbody>
      <tr>
        <th>公開日</th>
        <td>：</td>
        <td><%= @article[:release_date] %></td>
      </tr>
      <tr>
        <th>監督名</th>
        <td>：</td>
        <td><%= @article[:director] %></td>
      </tr>
      <tr>
        <th>出演者</th>
        <td>：</td>
        <td><%= @article[:performer] %></td>
      </tr>
      </tbody>
    </table>
  </div>

  <p class="show_article_content">
    <%= @article[:content] %>
  </p>

</div>