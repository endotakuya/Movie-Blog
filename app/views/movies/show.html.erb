<% content_for :cover do %>
    <div class="movie_detail ">
      <div class="movie_detail_inner clearfix">
        <h1><%= @movie['title'] %></h1>
        <picture>
          <img src="https://image.tmdb.org/t/p/w185_and_h278_bestv2<%= @movie['poster_path'] %>" alt="">
        </picture>
        <div class="movie_detail_info">
          <% if @movie['overview'].present? %>
              <p><%= @movie['overview'] %></p>
          <% else %>
              <p>概要はありません</p>
          <% end %>
          <p><%= link_to 'この映画の記事を書く', new_article_path(@movie), class: 'btn btn-default pull-right' %></p>
        </div>
      </div>
    </div>
<% end %>

<div class="page-header">
  <h3>この映画に関連する記事</h3>
</div>
<% if @articles.present? %>
    <div class="article_list clearfix">
      <% @articles.each do |article| %>
          <div class="article_item clearfix">
            <picture>
              <img src="https://image.tmdb.org/t/p/w185_and_h278_bestv2<%= article.poster_url %>" alt="">
            </picture>
            <div class="article_info">
              <h3><%= link_to article.article_title, article %></h3>
              <%= render 'user_articles/stock_button', article: article %>
            </div>
          </div>
      <% end %>
    </div>
<% else %>
    <p>関連する記事はまだありません。</p>
<% end %>