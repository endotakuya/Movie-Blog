<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h1>映画をもっと近くに</h1>
        <% unless logged_in? %>
        <a href="" class="btn btn-success btn-lg">Movie Blogを始める</a>
        <% else %>
        <%= form_tag(movies_path, :method => :get) do %>
          <div class="form-group">
            <%= text_field_tag(:query, '', placeholder: "最近観た映画はなんですか？", class: 'form-control') %>
          </div>
          <div class="text-center">
            <%= submit_tag('検索', class: 'btn btn-success') %>
          </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<h2>最近の投稿</h2>
<div class="article_list clearfix">
<% @articles.each do |movie| %>
<div class="article_item clearfix">
  <picture>
    <img src="https://image.tmdb.org/t/p/w185_and_h278_bestv2<%= movie.poster_url %>" alt="">
  </picture>
  <div class="article_info">
    <h3><%= movie.article_title %></h3>
    <%= link_to "読む", article_path(movie.id), :class => 'btn btn-default' %>
  </div>
</div>
<% end %>
</div>
