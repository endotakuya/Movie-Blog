<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>MoviLog</title>
    <%= csrf_meta_tags %>
    <%= include_gon %>

    <!-- bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- 共通CSS -->
    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- アラート用 -->
    <%= stylesheet_link_tag  'sweetalert/sweetalert', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Markdown Editor -->
    <%= stylesheet_link_tag  'simplemde/simplemde.min', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- 共通JS -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- アラート用 -->
    <%= javascript_include_tag 'sweetalert/sweetalert.min', 'data-turbolinks-track': 'reload' %>
    <!-- Bootstrap -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- Font Awesome -->
    <script src="https://use.fontawesome.com/edffc0f230.js"></script>
    <!-- レーダーチャート -->
    <%= javascript_include_tag 'radar-chart', 'data-turbolinks-track': 'reload' %>

  </head>

  <!-- <body class="fit_height" style="overflow: hidden;"> -->
  <body>
    <%= render 'layouts/navbar' %>
    <%= yield :cover %>

    <div id="article_warpper" class="clearfix">
      <%= render 'sweetify/alert' %>
      <%= yield %>
    </div>

    <%= render 'layouts/footer' %>
    <!-- Markdown Editor -->
    <%= javascript_include_tag 'simplemde/simplemde.min', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'editor', 'data-turbolinks-track': 'reload' %>
    <!-- 評価入力のバー -->
    <%= javascript_include_tag 'slider', 'data-turbolinks-track': 'reload' %>

  </body>
</html>
