<% if current_user.stock?(article) %>
    <%= form_tag(user_article_path(article.id), method: :delete) do %>
        <%= hidden_field_tag :article_id, article.id %>
        <%= submit_tag '解除', class: 'btn btn-danger' %>
    <% end %>
<% else %>
    <%= form_tag(user_articles_path) do %>
        <%= hidden_field_tag :article_id, article.id %>
        <%= submit_tag 'ストック', class: 'btn btn-primary' %>
    <% end %>
<% end %>